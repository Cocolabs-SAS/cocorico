{% extends '::base.html.twig' %}

{% block layout %}
    {% embed '@CocoricoCore/Frontend/layout.html.twig' %}

        {% trans_default_domain 'cocorico_user' %}

        {% block main %}
            {% include 'CocoricoCoreBundle:Frontend/Common:_flash.html.twig' %}

            <div id="form-registerlogin" class="form-signup validate-form row">
                {# <h1>{{ 'listing.new.signup.title'|trans({},'cocorico_listing') }}</h1> #}
                {#Login And Register Form#}
                <div class="col-sm-6">
                    <form class="form-signup" action="{{ path("cocorico_user_login_check") }}"
                          method="POST">
                        {% include '@CocoricoUser/Frontend/Common/_login_register.html.twig' with {
                        'form_registration': false,
                        'form_login': form
                        } only %}


                        <div id="registerbutton" class="btn-block">
                            <button type="submit" class="btn btn-default">
                                Valider
                                <i class="icon-right-small" style="float:right"></i>
                            </button>
                        </div>
                    </form>
                    <div id="form-registerlink">
                        <div>Vous n'avez pas de compte ?</div>
                        <a href="{{ path('cocorico_user_register') }}">Créér un compte</a>
                    </div>
                </div>

            </div>
        {% endblock %}

    {% endembed %}
{% endblock layout %}
