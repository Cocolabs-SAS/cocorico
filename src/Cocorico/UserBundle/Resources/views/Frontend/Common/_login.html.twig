{% trans_default_domain 'cocorico_user' %}

<div id="profile" class="login_register">
    <h1><i class="icon-user-circle-o"></i> Connexion</h1>
    <div id="login-errors-wrapper">
        {{ form_errors(form_login) }}
    </div>

    <div class="">
        <div class="col">
            <h3><i class="icon-user-circle-o" style="color:#006adc;"></i> Se connecter Ã  votre compte</h3>

            {{ form_errors(form_login._username) }}

            <div class="sub-form">
                <div class="field-row">
                    <div class="label">{{ form_label(form_login._username) }}</div>

                    <div class="field-holder">
                        {{ form_widget(form_login._username, {
                            'attr': {
                                'class': "form-control required",
                                'data-parsley-required-message': 'assert.not_blank'|trans({},'validators'),
                                'data-parsley-invalid-message': 'assert.invalid'|trans({}, 'validators')
                            }
                        }) }}
                    </div>
                </div>

                {{ form_errors(form_login._password) }}
                <div class="field-row">
                    <div class="label">{{ form_label(form_login._password) }}</div>

                    <div class="field-holder">
                        {{ form_widget(form_login._password, {
                            'attr': {
                                'class': "form-control required",
                                'data-parsley-required-message': 'assert.not_blank'|trans({},'validators'),
                                'data-parsley-invalid-message': 'assert.invalid'|trans({}, 'validators')
                            }
                        }) }}
                    </div>
                </div>

                <div>
                    <a href="{{ path('cocorico_user_resetting_request') }}">
                        {{ 'user.password_forgotten'|trans }}
                    </a>
                </div>
            </div>

        </div>

