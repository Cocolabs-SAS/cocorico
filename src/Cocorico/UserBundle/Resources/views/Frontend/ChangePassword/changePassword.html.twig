{% extends "CocoricoCoreBundle:Frontend:layout.html.twig" %}

{% trans_default_domain 'cocorico_user' %}

{% block main %}
    <h1>{{ 'user.reset.h1'|trans }}</h1>

    {% include 'CocoricoCoreBundle:Frontend/Common:_flash.html.twig' %}

    <form class="form" action="{{ path('cocorico_user_change_password') }}" method="POST">
        {{ form_widget(form) }}

        <button type="submit">{{ 'change_password.submit'|trans }}</button>
    </form>
{% endblock main %}
