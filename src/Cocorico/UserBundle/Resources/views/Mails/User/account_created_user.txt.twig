{% trans_default_domain 'cocorico_mail' %}

{% block subject -%}
    {% autoescape false %}
    {{ 'account_created_user.email.subject'|trans({'%sitename%': cocorico_site_name}, 'cocorico_mail', user_locale) }}
    {% endautoescape %}
{%- endblock %}

{% block message %}
    {{ 'account_created_user.email.message'|trans({
        '%firstname%': user.firstName
    }, 'cocorico_mail', user_locale) }}
{% endblock %}

{% block body_text %}
    {% autoescape false %}
    {{ message }}
    {% endautoescape %}
{% endblock %}

{% block body_html %}
    {% embed "@CocoricoCore/Mails/layout.html.twig" %}
        {% trans_default_domain 'cocorico_mail' %}

        {% block content %}
            {% autoescape false %}
            {{ message|raw|nl2br }}
            {% endautoescape %}
            {#Do not remove this comment. It is used for BDD testing #}
            <!--registration-->
        {% endblock %}
    {% endembed %}
{% endblock %}
