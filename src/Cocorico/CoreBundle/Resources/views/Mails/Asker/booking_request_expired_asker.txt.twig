{% trans_default_domain 'cocorico_mail' %}

{% block subject -%}
    {% autoescape false %}
    {{ 'booking_request_expired_asker.email.subject'|trans({'%booking_uid%': booking.id}, 'cocorico_mail', user_locale) }}
    {% endautoescape %}
{%- endblock %}

{% block message %}
    {{ 'booking_request_expired_asker.email.message'|trans({
        '%firstname%': user.firstName,
        '%similar_booking_listings_url%': similar_booking_listings_url
    }, 'cocorico_mail', user_locale) }}
{% endblock %}

{% block body_text %}
    {% autoescape false %}
    {{ message }}
    {% endautoescape %}
{% endblock %}

{% block body_html %}
    {% embed "@CocoricoCore/Mails/layout.html.twig" %}
        {% trans_default_domain 'cocorico_mail' %}

        {% block content %}
            {% autoescape false %}
            {{ message|raw|nl2br }}
            {% endautoescape %}
            {#Do not remove this comment. It is used for BDD testing #}
            <!--booking_request_expired_asker-->
        {% endblock %}
    {% endembed %}
{% endblock %}
