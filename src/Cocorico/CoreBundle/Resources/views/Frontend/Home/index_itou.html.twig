{% extends '::itou_base.html.twig' %}

{%- block meta_title -%}
    {{ 'home.meta_title'|trans({}, 'cocorico_meta') ~ " - " ~ cocorico_site_name }}
{%- endblock -%}

{%- block meta_description -%}
    {{ 'home.meta_desc'|trans({}, 'cocorico_meta') }}
{%- endblock -%}

{% block theme %}home-page{% endblock %}

{% block layout %}
    {% embed '@CocoricoCore/Frontend/itou_layout.html.twig' %}

        {% trans_default_domain 'cocorico_home' %}

        {% block sub_header %}
        {#
            <div class="visual text-center">
                <div class="container">
                    <div class="row">
                        <div class="col-xs-12 col-lg-10 col-lg-push-1">
                            <div class="title-holder">
                                <div class="title-frame">
                                    <h1>
                                        {{ 'home.header.title'|trans|raw }}
                                    </h1>
                                </div>
                            </div>
                        </div>
                        {{ render(controller('CocoricoCoreBundle:Frontend/ListingSearch:searchHomeForm')) }}
                    </div>
                </div>
            </div>
        #}
        {% endblock %}
        {% block main %}

            <section class="s-article-picture-01 s-article-picture-01--marche s-hp-01 has-illustration-bg-01 py-sm-8">
                <div class="s-article-picture-01__container container">
                    <div class="s-article-picture-01__row row">
                        <div class="s-article-picture-01__col s-article-picture-01__col--article col-12 col-lg-6 d-flex align-items-center">
                            <article>
                                <h3 class="h3">Bienvenue sur le marché de l’inclusion</h3>
                                <h2 class="s-article-picture-01__col--article__title h1"><strong>Vos prestations de qualité, socialement engagées et locales</strong></h2>
                            </article>
                        </div>
                        <div class="s-article-picture-01__col col-12 col-lg-6 pl-lg-6">
                            {{ form_start(form, {'attr': {'class': 's-hp-01__form bg-white w-100 rounded-lg shadow-lg p-3 p-lg-5'}}) }}
                            {{ form_errors(form) }}
                            {#<form class="s-hp-01__form bg-white w-100 rounded-lg shadow-lg p-3 p-lg-5">#}
                                <fieldset>
                                    <legend class="s-hp-01__form__legend ff-extra-01">Que cherchez-vous ?</legend>
                                    <div id="dir_form" class="form-group">
                                        <label class="h4" for="sector">Secteur d’activité</label>
                                        <!--
                                        <input type="text" class="form-control" id="inputSecteur" placeholder="Région, département, ville">
                                        -->
                                        <div class="multiselect itou-multiselect listing-category">
                                        {{form_widget(form.sector, {
                                            'id': 'sector',
                                            'attr': {
                                                'class': 'form-control jcf-ignore',
                                                'name': 'sector',
                                                'placeholder': 'Jardinage, Restauration, ...'
                                            }}
                                        )}}
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label class="h4" for="address">Lieu d’intervention</label>
                                        <div class="input-group">
                                            {# <input type="text" class="form-control" id="inputLieu" placeholder="Tous"> #}

                                            {{form_widget(form.address, {
                                                'id': 'address',
                                                'attr': {
                                                    'class': 'form-control',
                                                    'placeholder': 'Région, département, code postal'
                                                }}
                                            )}}
                                            
                                            <div class="input-group-append">
                                                <span class="input-group-text"><img src="/itou/images/ico-geo-alt.svg" alt=""></span>
                                            </div>
                                        </div>                                
                                    </div>
                                    <p class="text-center mb-0 mt-5">
                                        <button type="submit" class="btn btn-ico btn-primary">
                                            <span>Recherche</span>
                                            <svg width="16" height="16" fill="none" xmlns="http://www.w3.org/2000/svg">
                                                <path d="M12.523 10.963l3.213 3.211-1.062 1.062-3.211-3.213A6.72 6.72 0 017.25 13.5 6.752 6.752 0 01.5 6.75 6.752 6.752 0 017.25 0 6.752 6.752 0 0114 6.75a6.72 6.72 0 01-1.477 4.213zm-1.504-.557A5.233 5.233 0 0012.5 6.75c0-2.901-2.35-5.25-5.25-5.25A5.248 5.248 0 002 6.75C2 9.65 4.349 12 7.25 12a5.233 5.233 0 003.656-1.481l.113-.113z" fill="currentColor" />
                                            </svg>
                                        </button>
                                    </p>
                                </fieldset>
                            {# </form> #}
                            {{ form_end(form) }}
                        </div>
                    </div>
                </div>
            </section>

            <section class="s-article-picture-01 p-0">
                <div class="s-article-picture-01__container container container-max-lg">
                    <div class="s-article-picture-01__row row">
                        <div class="s-article-picture-01__col s-article-picture-01__col--picture d-none col-lg-5 d-lg-flex align-items-center px-lg-4">
                            <picture>
                                <img src="/images/hp-02-illustration-01.png" class="img-fluid" alt="">
                            </picture>
                        </div>
                        <div class="s-article-picture-01__col s-article-picture-01__col--article col-12 col-lg-7 d-flex align-items-center pt-5 pt-lg-0">
                            <article>
                                <h2 class="h2 mb-3 mb-lg-5"><strong>Vous recherchez un prestataire ?</strong></h2>
                                <h3 class="h4 mb-3 mb-lg-5">Nous diffuserons votre besoin auprès de nos partenaires et structures socialement insclusives.</h3>
                                <p class="s-article-picture-01__col--article__cta">
                                    <a href="https://itou.typeform.com/to/nxG0HlYx" rel="noopener" target="_blank" class="btn btn-primary btn-ico">
                                        <span>Contactez-nous</span>
                                        <svg width="17" height="15" fill="none" xmlns="http://www.w3.org/2000/svg">
                                            <path d="M16.5 13.505a.75.75 0 01-.744.745H2.244a.745.745 0 01-.744-.745v-.755H15V3.975l-6 5.4-7.5-6.75V1.5a.75.75 0 01.75-.75h13.5a.75.75 0 01.75.75v12.005zM3.325 2.25L9 7.357l5.675-5.107H3.325zM0 9.75h6v1.5H0v-1.5zM0 6h3.75v1.5H0V6z" fill="currentColor"></path>
                                        </svg>
                                    </a>
                                </p>
                            </article>
                        </div>
                    </div>
                </div>
            </section>

            <section class="s-cards-grid-01 bg-gray-400">
                <div class="s-cards-grid-01__container container">
                    <div class="s-cards-grid-01__row row">
                        <div class="s-cards-grid-01__col s-cards-grid-01__col--title col-12">
                            <h3 class="h2 mb-3 mb-lg-5">Solutions</h3>
                        </div>
                    </div>
                    <div class="s-cards-grid-01__row row row-cols-1 row-cols-md-2 row-cols-lg-3 justify-content-center">
                        <div class="s-cards-grid-01__col col mb-3 mb-md-5">
                            <div class="card c-card h-100 w-100 c-card--marche">
