{% extends '::base.html.twig' %}

{%- block meta_title -%}
    {{ 'home.meta_title'|trans({}, 'cocorico_meta') ~ " - " ~ cocorico_site_name }}
{%- endblock -%}

{%- block meta_description -%}
    {{ 'home.meta_desc'|trans({}, 'cocorico_meta') }}
{%- endblock -%}

{% block theme %}home-page{% endblock %}

{% block layout %}
    {% embed '@CocoricoCore/Frontend/layout.html.twig' %}

        {% trans_default_domain 'cocorico_home' %}

        {% block main %}
            <div>
                <!-- statsarea -->
                <iframe
                    src="https://stats.inclusion.beta.gouv.fr/public/dashboard/c6ff67a1-292e-4919-b5fd-fb50c1775142"
                    frameborder="0"
                    width="1200"
                    height="1200"
                    allowtransparency>
                </iframe>
            </div>

        {% endblock %}

    {% endembed %}
{% endblock %}
