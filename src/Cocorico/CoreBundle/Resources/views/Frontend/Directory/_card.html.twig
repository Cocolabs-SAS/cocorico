<a href="{{ path('cocorico_directory_show', {'id' : structure.id }) }}" class="siae-card-container">
    <div class="siae-card">
        <div class="sc-img">
            {# Logo #}

            {% if structure.images|length %}
                    {% set image = structure.images[0] %}
                    <img src="{{ (ListingImageConstants.IMAGE_FOLDER ~ image.name) | imagine_filter('listing_xsmall') }}"
                         alt="{{ structure.name }}"/>
            {% else %}
                    <img src="{{ (ListingImageConstants.IMAGE_FOLDER ~ ListingImageConstants.IMAGE_DEFAULT) | imagine_filter('listing_xsmall') }}"
                         alt="{{ structure.name }}"/>
            {% endif %}
        </div>
        <div class="sc-main container">
            <div class="sc-head">
                <h3>
                    {% if structure.brand %}
                        {{ structure.brand }}
                    {% else %}
                        {{ structure.name }}
                    {% endif %}
                </h3>
                {#
                - co-traitance
                - favoris
                #}
            </div>
            <div class="sc-body row">
                <div class="sc-profile">
                    <ul>
                        <li><img src="{{ asset('images/siae_list_kind.svg')}}" style="height:15px;">
                            <span style="">
                            {% if structure.kind == 'ETTI' %}
                                intérim
                            {% elseif structure.kind == 'AI' %}
                                Mise à disposition du personnel
                            {% else %}
                                {{ structure.prestaTypeText('<br />') | raw}}
                            {% endif %}
                            </span>
                        </li>
                        <li><img src="{{ asset('images/siae_list_type.svg')}}" style="height:15px">{{ structure.kind }}</li>
                        <li>
                        {% if structure.hasDirectoryListingCategory %}
                            <img src="{{ asset('images/siae_list_sectors.svg')}}" style="height:15px">
                            <span>
                                {{ structure.getSectorString(2, '<br />') | raw }}
                            </span>
                        {% endif %}
                        </li>
                        <li><img src="{{ asset('images/siae_list_town.svg')}}" style="height:21px">{{ structure.region }}</li>
                    </ul>
                    {#
                    - type
                    - address
                    #}
                </div>
            </div>
        </div>
    </div>
</a>
