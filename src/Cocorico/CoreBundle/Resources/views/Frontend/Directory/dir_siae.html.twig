{% extends '::base.html.twig' %}

{%- block meta_title -%}
    {{ 'home.meta_title'|trans({}, 'cocorico_meta') ~ " - " ~ cocorico_site_name }}
{%- endblock -%}

{%- block meta_description -%}
    {{ 'home.meta_desc'|trans({}, 'cocorico_meta') }}
{%- endblock -%}

{% block theme %}home-page{% endblock %}

{% block layout %}
    {% embed '@CocoricoCore/Frontend/layout.html.twig' %}

        {% trans_default_domain 'cocorico_home' %}

        {% block main %}
            <div>
                <h1>Liste SIAE</h1>
                {{ form_start(form) }}
                <div class="row">
                    <div class="col-sm-3">
                        <div class="title">
                            Secteur d'activité
                        </div>
                        <div class="field-holder">
                        {{form_widget(form.sector, {
                            'id': 'sector',
                            'attr': {
                                'class': 'form-control',
                                'placeholder': 'xxx'
                            }}
                        )}}
                        </div>
                    </div>
                    <div class="col-sm-3">
                        <div class="title">
                            Lieu d'intervention
                        </div>
                        <div class="field-holder">
                        {{form_widget(form.postalCode, {
                            'id': 'postal',
                            'attr': {
                                'class': 'form-control',
                                'placeholder': 'code postal'
                            }}
                        )}}
                        </div>
                    </div>
                    <div class="col-sm-3">
                        <div class="title">
                            Type de structure
                        </div>
                        <div class="field-holder">
                        {{form_widget(form.structureType, {
                            'id': 'sector',
                            'attr': {
                                'class': 'form-control',
                                'placeholder': 'AI, ACI, ETTI'
                            }}
                        )}}
                        </div>
                    </div>
                    <div class="col-sm-3">
                        <div class="title">
                            Type de prestation
                        </div>
                        <div class="field-holder">
                        {{form_widget(form.prestaType, {
                            'id': 'sector',
                            'attr': {
                                'class': 'form-control',
                                'placeholder': 'Prestation, mise à disposition du personnel'
                            }}
                        )}}
                        </div>
                    </div>
                </div>
                <button id="filter-submit" type="submit" class="btn btn-default">
                    Filtrer
                    <span style="font-family:fontello2;">
                    &#128269;
                    </span>
                </button>
                {{ form_end(form) }}
            </div>
            <div id="list">
                <table>
                    <tr>
                        {% for column in columns %}
                            <th>{{ column }}</th>
                        {% endfor %}
                    </tr>
                    {% for row in list %}
                        <tr>
                            {% for key, value in row %}
                                <td>{{ value }}</td>
                            {% endfor %}
                        </tr>
                    {% endfor %}
                </table>
                <button id="csv_get" class="btn btn-default">
                    Télécharger la liste
                    <span style="font-family:fontello2;">
                    &#128269;
                    </span>
                </button>
            </div>

        {% endblock %}

    {% endembed %}
{% endblock %}
