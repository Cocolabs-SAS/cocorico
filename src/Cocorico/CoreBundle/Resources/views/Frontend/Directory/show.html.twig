    {{ parent() }}

    {% include '@CocoricoGeo/Common/js/_geocoding_js.html.twig' with {
    'map_elt': '#map-company',
    'marker_draggable': false,
    'default_lat': structure.latitude,
    'default_lng': structure.longitude,
    'default_zoom': '10',
    'display_marker': false
    } only %}

    <script>
